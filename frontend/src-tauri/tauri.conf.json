{
  "productName": "SQL Databricks Bridge",
  "version": "0.1.5",
  "identifier": "com.kantar.sqldatabricksbridge",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SQL Databricks Bridge",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIwMTlCOTFDNUNBQzdGQzgKUldUSWY2eGNITGtaSUZWTEtVa2VPaXFvVVo0QVJlQlA2WE04dG5WRVowTDVsbTBWbGpzOHZNNzQK",
      "endpoints": [
        "https://github.com/jaalduna/sql-databricks-bridge/releases/latest/download/latest.json"
      ]
    }
  }
}
