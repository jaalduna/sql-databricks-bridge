# SQL-Databricks Bridge Configuration

# Service settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================
# SQL Server settings (OPTIONAL for Databricks-only testing)
# ============================================================
# Leave these empty or commented out if you only have Databricks access.
# The tests will use mocked SQL Server connections.
#
# SQLSERVER_HOST=your-sql-server.database.windows.net
# SQLSERVER_PORT=1433
# SQLSERVER_DATABASE=your_database
# SQLSERVER_USERNAME=your_username
# SQLSERVER_PASSWORD=your_password
# SQLSERVER_DRIVER=ODBC Driver 18 for SQL Server

# Databricks settings
DATABRICKS_HOST=https://your-workspace.azuredatabricks.net
DATABRICKS_TOKEN=your_personal_access_token
# Or use Service Principal:
# DATABRICKS_CLIENT_ID=your_client_id
# DATABRICKS_CLIENT_SECRET=your_client_secret
DATABRICKS_CATALOG=your_catalog
DATABRICKS_SCHEMA=your_schema
DATABRICKS_VOLUME=your_volume

# Polling settings
POLLING_INTERVAL_SECONDS=10
MAX_EVENTS_PER_POLL=100

# Extraction settings
EXTRACTION_CHUNK_SIZE=100000
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Auth settings
AUTH_ENABLED=true
PERMISSIONS_FILE=config/permissions.yaml
